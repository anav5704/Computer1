
<div class="hero">
   
    <div></div>
    <h1 class="hero_big_text">
        {%- for i in hero_text -%}
            {% if hero_text[loop.index0] == hero_text_highlight %}
                <span class='accent'>{{ hero_text[loop.index0]}} </span>

            {% elif hero_text[loop.index0] == hero_text_break %}
                <span>{{ hero_text[loop.index0]}} <br> </span>
            {% else %}
                <span>{{ hero_text[loop.index0]}} </span>
            

            {% endif %}
        
        {%- endfor %}
    </h1>
    <section class="hero_btns_holder" class='{{black}}'>
        <a href='#productCard'><button class="btn-hero {{black}}">Products</button></a>
        <a href='../#contact'><button class="btn-hero {{black}}">Contact</button></a>
    </section>
     <img class='hero_img' src="/assets/{{hero_img}}.png" alt="">
    
</div>